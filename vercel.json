{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/react"
      },
      {
        "src": "server/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/client/build/$1"
      }
    ],
    "env": {
      "REACT_APP_API_URL": "https://gighive-jobportal.vercel.app/api"
    },
    "functions": {
      "server/api/**/*.js": {
        "memory": 1024,
        "maxDuration": 10
      }
    }
  }
  